@model IEnumerable<C500Hemis.Models.TbNguoiHocVayTinDung>

@{
    ViewData["Title"] = "Index";
    Dictionary<int, string> idNguoiToName = (Dictionary<int, string>)ViewData["idNguoiToName"];
}
<html lang="vi">
@section Heads {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.datatables.net/fixedcolumns/4.2.2/css/fixedColumns.bootstrap5.min.css">
    <link href="https://cdn.datatables.net/buttons/2.2.2/css/buttons.bootstrap5.min.css" rel="stylesheet">

    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/fixedcolumns/4.2.2/js/dataTables.fixedColumns.min.js"></script>
    <link href="~/css/ThongTinHocTapNghienCuuSinh.css" rel="stylesheet" />
}

<h1>NGƯỜI HỌC VAY TÍN DỤNG</h1>

<div class="w">
    <p>
        <a asp-action="Create" style="margin-left:6%;" class="btn btn-create">
            Tạo Mới  <i class="fa-solid fa-plus"></i>
        </a>
    </p>
    <table class="table table-hover" id="example">
        <thead>
            <tr>
                <th>STT</th>
                <th>Họ tên</th>
                <th>@Html.DisplayNameFor(model => model.IdHocVienNavigation)</th>
                <th>@Html.DisplayNameFor(model => model.SoTienDuocVay)</th>
                <th>@Html.DisplayNameFor(model => model.TenToChucTinDung)</th>
                <th>@Html.DisplayNameFor(model => model.NgayVay)</th>
                <th>@Html.DisplayNameFor(model => model.DiaChi)</th>
                <th>@Html.DisplayNameFor(model => model.ThoiHanVay)</th>
                <th>@Html.DisplayNameFor(model => model.TinhTrangVayNavigation)</th>
                <th class="nosort">Tùy chọn</th>
            </tr>
        </thead>
        <tbody>
            @{
                int count = 0;
            }
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <td>@count</td>
                    <td>
                        @if (item.IdHocVienNavigation.IdNguoi != null)
                            @Html.DisplayFor(modelItem => idNguoiToName[item.IdHocVienNavigation.IdNguoi ?? 0])

                    </td>
                    <td>@Html.DisplayFor(modelItem => item.IdHocVienNavigation.Email)</td>
                    <td>@Html.DisplayFor(modelItem => item.SoTienDuocVay)</td>
                    <td>@Html.DisplayFor(modelItem => item.TenToChucTinDung)</td>
                    <td>@Html.DisplayFor(modelItem => item.NgayVay)</td>
                    <td>@Html.DisplayFor(modelItem => item.DiaChi)</td>
                    <td>@Html.DisplayFor(modelItem => item.ThoiHanVay)</td>
                    <td>@Html.DisplayFor(modelItem => item.TinhTrangVayNavigation.TuyChon)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdNguoiHocVayTinDung" class="btn" data-bs-toggle="tooltip" title="Chỉnh sửa">
                            <div class="icon-container">
                                <i class="fa-regular fa-pen-to-square" style="color: #7dd9bd;"></i>
                            </div>
                        </a>
                        <a asp-action="Details" asp-route-id="@item.IdNguoiHocVayTinDung" class="btn" data-bs-toggle="tooltip" title="Chi tiết">
                            <div class="icon-container">
                                <i class="fa-solid fa-circle-info" style="color: #e5b8e4;"></i>
                            </div>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.IdNguoiHocVayTinDung" class="btn" data-bs-toggle="tooltip" title="Xóa">
                            <div class="icon-container">
                                <i class="fa-solid fa-trash" style="color: #f46262;"></i>
                            </div>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.bootstrap5.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.print.min.js"></script>

    <script>
        // Initialize DataTable
        new DataTable('#example', {
            "language": {
                "url": "https://cdn.datatables.net/plug-ins/1.10.20/i18n/Vietnamese.json"
            },
            dom: 'Bfrtip',
            buttons: [
                {
                    extend: 'excel',
                    text: '<i class="fas fa-file-excel"></i> Excel',
                    title: 'NGƯỜI HỌC VAY TÍN DỤNG',
                    filename: 'NGƯỜI HỌC VAY TÍN DỤNG',
                    exportOptions: {
                        columns: ':not(.nosort)'
                    }
                },
                {
                    extend: 'pdf',
                    text: '<i class="fas fa-file-pdf"></i> PDF',
                    title: 'NGƯỜI HỌC VAY TÍN DỤNG',
                    filename: 'NGƯỜI HỌC VAY TÍN DỤNG',
                    exportOptions: {
                        columns: ':not(.nosort)'
                    }
                },
                {
                    extend: 'csv',
                    text: '<i class="fas fa-file-csv"></i> CSV',
                    title: 'NGƯỜI HỌC VAY TÍN DỤNG',
                    filename: 'NGƯỜI HỌC VAY TÍN DỤNG',
                    exportOptions: {
                        columns: ':not(.nosort)'
                    }
                }
            ],
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": false,
            "responsive": true,
            "scrollX": true,
            fixedColumns: {
                leftColumns: 2,
                rightColumns: 1
            }
        });

        // Initialize Bootstrap tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });
    </script>
}
