@model IEnumerable<C500Hemis.Models.TbThongTinViPham>

@{
    ViewData["Title"] = "Index";
    var loaiViPham = ViewData["LoaiViPham"];
}

<div class="d-flex flex-column justify-content-center align-items-center w-100">
    <h1>Biểu đồ loại vi phạm</h1>
    <canvas id="pieChartDisable"></canvas>
</div>

@section Styles {
    <style>
        #pieChartDisable {
            width: 400px !important;
            height: 400px !important;
        }
    </style>
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/assets/js/chart.js"></script>
    <script>
        // Disablility chart
        var disabilityData = @Html.Raw(Json.Serialize(loaiViPham));
        var Labels = disabilityData.map(function(item) {
            return item.loaiViPham;
        });
        var Data = disabilityData.map(function(item) {
            return item.count;
        });
        createPieChart('pieChartDisable', Labels,'Disability Count', Data);


    </script>
}
