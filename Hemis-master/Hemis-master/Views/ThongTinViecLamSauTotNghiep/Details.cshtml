@model C500Hemis.Models.TbThongTinViecLamSauTotNghiep

@{
    ViewData["Title"] = "Thông tin chi tiết";
}

@section Heads {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.datatables.net/fixedcolumns/4.2.2/css/fixedColumns.bootstrap5.min.css">

    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/fixedcolumns/4.2.2/js/dataTables.fixedColumns.min.js"></script>
    <link href="~/css/ThongTinHocTapNghienCuuSinh.css" rel="stylesheet" />
}

<h2>THÔNG TIN CHI TIẾT</h1>

<div class="container">
    <div style="position: relative;">
        <a asp-action="Index" style="position: absolute; top: 10px; right: 10px; margin-top: -20px;">
            <div class="icon-container">
                <i class="fa-solid fa-circle-arrow-left" style="font-size:25px;"></i>
            </div>
        </a>
    </div>
    <!-- Thông tin về việc làm -->
    <div class="row">
        <div class="col-md-6">
            <label asp-for="TenDonViCapBang" class="control-label"></label>
            <input type="text" class="form-control" value="@Html.DisplayFor(model => model.TenDonViCapBang)" readonly>
        </div>
        <div class="col-md-6">
            <label asp-for="DonViTuyenDung" class="control-label"></label>
            <input type="text" class="form-control" value="@Html.DisplayFor(model => model.DonViTuyenDung)" readonly>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <label asp-for="ThoiGianTuyenDung" class="control-label"></label>
            <input type="text" class="form-control" value="@Html.DisplayFor(model => model.ThoiGianTuyenDung)" readonly>
        </div>
        <div class="col-md-6">
            <label asp-for="MucLuongKhoiDiem" class="control-label"></label>
            <input type="text" class="form-control" value="@Html.DisplayFor(model => model.MucLuongKhoiDiem)" readonly>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <label asp-for="IdHinhThucTuyenDungNavigation" class="control-label"></label>
            <input type="text" class="form-control" value="@Html.DisplayFor(model => model.IdHinhThucTuyenDungNavigation.HinhThucTuyenDung)" readonly>
        </div>
        <div class="col-md-6">
            <label asp-for="IdHocVienNavigation" class="control-label"></label>
            <input type="text" class="form-control" value="@Html.DisplayFor(model => model.IdHocVienNavigation.Email)" readonly>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <label asp-for="IdViTriViecLamNavigation" class="control-label"></label>
            <input type="text" class="form-control" value="@Html.DisplayFor(model => model.IdViTriViecLamNavigation.ViTriViecLam)" readonly>
        </div>
    </div>

    <div class="form-group text-center mt-4">
        <a asp-action="Edit" asp-route-id="@Model?.IdThongTinViecLamSauTotNghiep">
            <input type="submit" value="Chỉnh sửa" class="btn btn-primary" />
        </a> 
    </div>
</div>
